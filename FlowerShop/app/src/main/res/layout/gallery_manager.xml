<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#42A5F5"
            android:gravity="center"
            android:text="GALLERY MANAGER"
            android:textColor="#FF8A80"
            android:textSize="27sp"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gridview_gallery_manager"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentBottom="true"
            android:numColumns="2"
            android:layout_marginBottom="63dp" />

        <Button
            android:id="@+id/button_back_gallerymanager"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gridview_gallery_manager"
            android:layout_marginTop="-63dp"
            android:onClick="back"
            android:text="BACK" />

        <Button
            android:id="@+id/button_add_gallerymanager"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridview_gallery_manager"
            android:layout_marginTop="-63dp"
            android:layout_toEndOf="@+id/button_back_gallerymanager"
            android:onClick="add"
            android:text="ADD" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>