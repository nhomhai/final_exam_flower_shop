<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bac"
        >

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/list"
            android:popupBackground="#F8BBD0 "
            android:visibility="visible" />

        <Button
            android:id="@+id/button_view_cart_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/spinner4"
            android:layout_marginEnd="10dp"
            android:onClick="cart"
            android:background="@drawable/cart" />

        <EditText
            android:id="@+id/editText_view_search_3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/spinner4"
            android:layout_toEndOf="@+id/spinner4"
            android:layout_toStartOf="@+id/button_view_search_3"
            android:ems="10"
            android:gravity="left"
            android:hint="Search..."
            android:inputType="textPersonName"
            android:textColor="#9C27B0"
            android:textColorHint="@android:color/holo_red_light"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_view_search_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:onClick="search"
            android:layout_alignBottom="@+id/editText_view_search_3"
            android:layout_toLeftOf="@+id/button_view_cart_3"
            android:background="@drawable/search" />

        <LinearLayout
            android:id="@+id/linerlayout_button_main_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_main_shoping_now_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCE4EC"
                android:onClick="shoppingnow"
                android:text="SHOPPING NOW"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_main_nothing_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCE4EC"
                android:onClick="store"
                android:text="STORE SYSTEM"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3_2"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linerlayout_button_main_3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/edit2" />

        <VideoView
            android:id="@+id/videoView3_2"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_toStartOf="@+id/button_gallery_2"
            android:layout_alignStart="@+id/imageView3_2"
            android:layout_below="@+id/imageView3_2"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_gallery_2"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignEnd="@+id/imageView3_2"
            android:layout_below="@+id/imageView3_2"
            android:layout_weight="1"
            android:background="@drawable/gallery"
            android:onClick="gallery" />

        <Button
            android:id="@+id/button_saleoff_valentine_2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/videoView3_2"
            android:layout_below="@+id/videoView3_2"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/valentine" />

        <Button
            android:id="@+id/button_wedding_flower_2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_alignStart="@+id/button_saleoff_valentine_2"
            android:layout_below="@+id/button_saleoff_valentine_2"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/wedding" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>