<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView_key_customrecent"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="28dp"
            android:text="TextView"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_total_customrecent"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView_key_customrecent"
            android:layout_marginTop="80dp"
            android:text="TextView"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_success_customrecent"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView_key_customrecent"
            android:layout_marginEnd="16dp"
            android:background="#c2db78"
            android:onClick="success"
            android:text="SUccess"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_detail_customrecent"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/button_success_customrecent"
            android:layout_alignTop="@+id/textView_total_customrecent"
            android:onClick="show"
            android:background="?android:attr/actionModePasteDrawable" />

        <Button
            android:id="@+id/button_delete_customrecent"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/button_success_customrecent"
            android:layout_alignTop="@+id/textView_total_customrecent"
            android:onClick="delete"
            android:background="@android:drawable/btn_dialog" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>